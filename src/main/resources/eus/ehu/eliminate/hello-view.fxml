<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Line?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="eus.ehu.eliminate.HelloController" styleClass="root">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="thinkNumberText" text="Piensa un número..." styleClass="label"/>
    <Label fx:id="welcomeText" styleClass="label"/>
    <TextField fx:id="inputField" promptText="Introduzca su número" styleClass="text-field"/>
    <Button fx:id="actionButton" text="Adivinar número" onAction="#onShowTextButtonClick" styleClass="button"/>
    <Button fx:id="resetButton" text="Reiniciar" onAction="#onResetButtonClick" styleClass="button" visible="false"/>

    <Pane fx:id="surpriseFacesPane" visible="false"
          VBox.vgrow="ALWAYS">
        <Circle fx:id="faceCircle" fill="#FFC300"/>
        <Circle fx:id="eyeLeft" fill="#000000"/>
        <Circle fx:id="eyeRight" fill="#000000"/>
        <Line fx:id="mouthLine" stroke="black" strokeWidth="2"/>
    </Pane>
</VBox>